@model leave_management.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Review @Model.RequestingEmployee.Firstname  @Model.RequestingEmployee.Lastname's Leave Request</h1>



@if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        This Request Approved By  @Model.ApprovedBy.Firstname  @Model.ApprovedBy.Lastname  at  @Model.DateActioned
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        This Request Rejected By  @Model.ApprovedBy.Firstname  @Model.ApprovedBy.Lastname  at  @Model.DateActioned
    </div>
}


<h4>

    @Html.DisplayNameFor(model => model.DateRequested) -  @Html.DisplayFor(model => model.DateRequested)

</h4>

<div>
    <h4>LeaveRequestVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingEmployee.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateRequested)
            </dt>
            <dd class = "col-sm-10">
